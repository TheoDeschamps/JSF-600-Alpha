{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@socket-handlers/*": ["server/socket-handlers/*"],
      "@models/*": ["server/models/*"],
      "@utils/*": ["server/utils/*"]
    }
  },
  "include": ["server/**/*"]
}
